<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/cart_item_list_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true" />


        <TextView
            android:id="@+id/cart_item_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/cart_item_list_image"
            android:layout_toRightOf="@+id/cart_item_list_image"
            android:text="Samsung galaxy s7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_item_list_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cart_item_list_name"
            android:layout_alignStart="@+id/cart_item_list_name"
            android:layout_below="@+id/cart_item_list_name"
            android:layout_marginTop="6dp"
            android:text="@string/from_grofers"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_item_list_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cart_item_list_seller"
            android:layout_alignStart="@+id/cart_item_list_seller"
            android:layout_below="@+id/cart_item_list_seller"
            android:layout_marginTop="6dp"
            android:text="@string/quantity"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_item_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cart_item_list_quantity"
            android:layout_alignStart="@+id/cart_item_list_quantity"
            android:layout_below="@+id/cart_item_list_quantity"
            android:layout_marginTop="6dp"
            android:text="Rs.10,000"
            android:textColor="@color/red"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cart_item_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cart_item_list_name"
            android:layout_alignEnd="@+id/linearLayout"
            android:layout_alignRight="@+id/linearLayout"
           android:layout_marginTop="6dp"
            android:background="@drawable/ic_delete" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cart_item_list_price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/cart_list_remove_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:background="@drawable/remove_button" />

            <TextView
                android:id="@+id/cart_list_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="12dp"
                android:text="2"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/cart_list_add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_button" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
