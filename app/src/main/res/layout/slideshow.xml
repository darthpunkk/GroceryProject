<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="220dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slideshow_progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/dark_grey"/>
    <com.android.volley.toolbox.NetworkImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slideshow_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
    </LinearLayout>
